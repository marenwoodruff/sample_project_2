<h1>Edit {{author.fullName}}</h1>

<form action="/authors/{{author.id}}?_method=PATCH" method="POST">
    <div>
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" value="{{author.first_name}}">
    </div>
    <div>
        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" value="{{author.last_name}}">
    </div>
    <div>
        <label for="country">Country:</label>
        <input type="text" name="country" value="{{author.country}}">
    </div>
    <div>
        <input type="submit" value="Submit">
    </div>
</form>

<a href="/authors">Main Page</a>
